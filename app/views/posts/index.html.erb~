<script>
$j(document).ready(
  function(){
    $j('#scroll_up').click(function(){
      $j('body').scrollTo(0,800,{queue:true});
    });
    $j('#scroll_down').click(function(){
      $j('body').scrollTo(500,800,{queue:true});
    });
    $j('#clear_search_button').click(function(){
      $j('#search_form input').each(function(){
        if($j(this).attr("name")!='commit'){
          $j(this).val('');
          if($j(this).attr("type")=='checkbox'){
            $j(this).removeAttr("checked");
          }
        }
      });
    });
    $j('#search_category div').click(
      function(){ 
        var category_id = $j(this).attr('id');
        var id = category_id.substr(category_id.length-2,2);
        if($j(this).attr('class')=='unclicked'){                    
          $j(this).attr('class', 'clicked');                   
          var current_text = $j('#categories_ids').val();
          $j('#categories_ids').val(current_text + ' ' + id.toString());            
        }
        else{ 
          $j(this).attr('class','unclicked'); 
          var regex_id='^'+id+'$';
          var current_val=$j('#categories_ids').val();
          $j('#categories_ids').val(current_val.replace(id, ''));            
        }
      }
    );
  }
);
</script>

<%= form_tag(posts_path, :method=>"get", :id=>'search_form') do%>
<p>
  <%= label_tag 'Szukana fraza'%>
  <%= search_field_tag 'keyword'%>
</p>
<p>
  <%=label_tag 'szukaj jako pojedyńczego słowa'%>
  <%= check_box_tag 'one_word'%>

  <%=label_tag 'szukaj tylko w tytułach'%>
  <%=check_box_tag 'keyword_in_title'%>

  <%=label_tag 'szukaj tylko w treści'%>
  <%= check_box_tag 'keyword_in_content'%>

  <%=label_tag'wielkość liter brana pod uwagę'%>
  <%=check_box_tag 'case_sensitive'%>
  
</p>
<p>
  <%=label_tag'zakres cenowy'%>

  <%=text_field_tag'price_left','',:size=>8%> -
  <%= text_field_tag'price_right', '', :size=>8%>

  <%=label_tag'za darmo'%>
  <%= check_box_tag'for_free'%>
</p>
<p>
  <%= label_tag'załączono zdjęcia'%>
  <%= check_box_tag'photo_added'%>

  <%= label_tag'odbiór osobisty'%>
  <%= check_box_tag'own_deliv'%>
  <%= label_tag 'ids'%>

  <%=text_field_tag "categoriesids",'', :id=>"categories_ids"%>
</p>

<div id='search_category' style="border:1px solid #fff; width:400px; height:150px;">
  <%=Category.find_each do |x| %>
    <div class='unclicked' id=category<%=x.id%> style="width:70px; heigth:30px;background-color:#12345;border:1px solid #fff;float:left;">
      <%=x.name%>
    </div>
  <%end%>
</div>

<%=submit_tag'szukaj'%>

<%end%>

<%=content_tag(:button, 'wyczyść', :id=>'clear_search_button')%>

