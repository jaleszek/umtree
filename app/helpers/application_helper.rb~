module ApplicationHelper
  def getCategories
    @categories = Category.all
    @categories_label = Category.find_by_sql "select*from Categories where parent_id=22"
  end
  def title
    main_title = "Sprzedaj stara"
    if @title.nil?
      main_title
    else   
      "#{main_title}, #{@title}"   
    end
  end
  
end
